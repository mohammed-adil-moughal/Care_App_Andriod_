<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="188dp"
        android:layout_height="265dp"
        android:src="@drawable/pressureic" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_dialoge_form"
        android:textSize="20dp" />



    <EditText

        android:id="@+id/pressure_systolic"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="number"

        android:imeOptions="actionDone"

        android:hint="Systolic (mm hg)"/>
    <EditText

        android:id="@+id/pressure_disatolic"

        android:layout_width="match_parent"  android:layout_height="wrap_content"

        android:inputType="number"

        android:imeOptions="actionDone"

        android:hint="Diastolic (mm hg)"/>
    <EditText

        android:id="@+id/pressure_pulse"

        android:layout_width="match_parent"  android:layout_height="wrap_content"

        android:inputType="number"

        android:imeOptions="actionDone"

        android:hint="Pulse (bpm)"/>
    <TextView

        android:id="@+id/pressure_date"

        android:layout_width="match_parent"  android:layout_height="wrap_content"

        android:inputType="text"

        android:imeOptions="actionDone"
/>
    <TextView

        android:id="@+id/pressure_time"

        android:layout_width="match_parent"  android:layout_height="wrap_content"

        android:inputType="text"

        android:imeOptions="actionDone"

       />



</LinearLayout>