<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bga"
    tools:context="com.example.adil.checkup.Fragment.TrackerFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginStart="16dip"
        android:layout_marginEnd="16dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"

            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:text="Blood Pressure"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageBp"
            android:layout_width="140dp"
            android:layout_height="198dp"
            android:layout_below="@+id/textView5"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/bloodpressure" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/bloodpressure"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.rey.material.widget.Button
            android:id="@+id/buttonBloodPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="#26ae90"
            android:text="@string/View"
            android:textColor="#ffffff" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_marginTop="60dip"
        android:layout_marginStart="16dip"
        android:layout_marginEnd="16dip"
        android:background="@color/white"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"

            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:text="Diabetes Glucometer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagedb"
            android:layout_width="140dp"
            android:layout_height="198dp"
            android:layout_below="@+id/textView6"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/diabetes" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/glucose"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.rey.material.widget.Button
            android:id="@+id/buttonBloodGlucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="#26ae90"
            android:text="@string/View"
            android:textColor="#ffffff" />

    </android.support.v7.widget.CardView>


</FrameLayout>
